/* pages/login/login.wxss */

.login-container{
    display: flex;
    flex-direction: column;
    margin: 10px;
}
.login-items{
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
}
.login-items:nth-child(1) text{
    text-align: center;
    margin: 20rpx;
    flex: 1;
}

text{
    width: 160rpx;
    text-align:end;
}
input{
    flex: 1;
    border: 1px solid #000;
    height: 60rpx;
}
.user-reg{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: end;
}